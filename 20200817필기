<html>
    <head>
        <style>
            #menu{
                background: aliceblue;
            }
            #menu ul{
                margin: 0;
                padding: 0;
                width: 560px;
            }
            #menu ul li{
                display: inline-block;
                list-style-type: none;
                padding: 0px 20px;
                /*top = bottom=0, left=right=20 */
            }
            #menu ul li:hover{ /*마우스 올리면 색 변함*/
                color: violet;
            }
        </style>
    </head>
    <body>
        <nav id="menu">
            <ul>
                <li>아메</li>
                <li>라떼</li>
                <li>카푸</li>
            </ul>
        </nav>
    </body>
